# Django Configuration
SECRET_KEY=your-secret-key-here-change-this-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# MongoDB Configuration
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/ktvs?retryWrites=true&w=majority

# Google OAuth2 (Required)
SOCIAL_AUTH_GOOGLE_OAUTH2_KEY=your-google-oauth2-client-id
SOCIAL_AUTH_GOOGLE_OAUTH2_SECRET=your-google-oauth2-client-secret

# Security (Production)
CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Email Configuration (Optional - for email verification)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password

# Master Key for Encryption (Change in production!)
MASTER_KEY=your-32-byte-hex-key-for-aes-256-encryption
